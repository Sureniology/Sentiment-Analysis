import re
def process_tweet(Tweets):
    return " ".join(re.sub("\@+\w+|\.", "",Tweets.lower()).split())



In [57]:


Data['Tweets'] = Data['Tweets'].apply(lambda x:process_tweet(x))



In [58]:


​
