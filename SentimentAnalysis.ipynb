Data['Polarity'] = Encode.fit_transform(Data['Polarity'])
x_train,x_test,y_train,y_test = train_test_split(Data["Tweets"],
                                                 Data['Polarity'],
                                                 test_size=0.2,
                                                 random_state=1)



In [59]:


result_cols = ["Classifier", "Accuracy"]
